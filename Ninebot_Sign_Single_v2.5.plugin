#############################
# 九号电动车 单账号自动签到 v2.5
# 支持 Loon UI 开关控制（远程订阅可显示文字）
# 自动抓包写入 Authorization / DeviceId / User-Agent
# 作者：❥﹒﹏非我不可 & QinyRui
#############################

[General]
# 插件安装后自动启动脚本定时任务
cron "九号签到" script-path=Ninebot_Sign_Single_v2.5.js cronexpr=@daily timeout=120

[Script]
# ======== 处理抓包写入 ========
http-request ^https:\/\/.+ninebot\.com\/.+ script-path=Ninebot_Sign_Single_v2.5.js requires-body=false tag=九号-自动写入

# ======== 主体签到脚本 ========
script-path=Ninebot_Sign_Single_v2.5.js timeout=120 tag=九号-执行签到

####################################
#            UI 面板定义
####################################
[Argument]

Debug_enable = switch,false,true,tag=调试日志开关
Notify_enable = switch,true,false,tag=通知开关
AutoBox_enable = switch,true,false,tag=自动开启盲盒开关
AutoRepair_enable = switch,true,false,tag=自动补签开关
InternalTest_enable = switch,false,true,tag=内测申请开关

NotifyTitle_text = text,默认=九号签到助手,tag=通知标题文本框
CronTime_text = text,默认=0 8 * * *,tag=签到时间 CRON 文本框