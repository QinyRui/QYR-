[Script]
# 主签到脚本（带日志）
cron "0 9 * * *" script-path=https://raw.githubusercontent.com/QinyRui/QYR-/main/Ninebot/Ninebot_Sign_Single_v2.5.js, timeout=20, tag=九号每日自动签到

# 抓包自动写入账号 (authorization/deviceId)
http-request ^https:\/\/account\.ninebot\.cn\/v5\/login script-path=https://raw.githubusercontent.com/QinyRui/QYR-/main/Ninebot/Ninebot_Sign_Single_AutoWrite.js, tag=九号账号自动写入


[MITM]
hostname = account.ninebot.cn, cn-cbu-gateway.ninebot.com


[Plugin Script]
# ======================================================
# 九号智能电动车签到（v2.5）
# 作者：❥﹒﹏非我不可
# 更新时间：2025/11/20
# 远程直接订阅，无需 BoxJS
# 支持：自动抓包写入、自动盲盒、自动补签
# ======================================================

# ⚙️ 插件设置 UI
# ------------------------------------------------------

# 日志开关
setting.logSwitch = switch("调试日志输出", false)

# 通知开关
setting.notifySwitch = switch("签到消息通知", true)

# 自动盲盒
setting.autoBlindBox = switch("自动开启盲盒", true)

# 自动补签
setting.autoReSign = switch("自动补签", false)

# 内测申请
setting.betaApply = switch("自动参与官方内测", false)

# 自定义通知标题
setting.customTitle = text("通知标题（可留空）", "九号自动签到")

# Cron 设置
setting.cronSet = text("签到执行时间（cron）", "0 9 * * *")

# ======================================================
