{
  "id": "ninebot_private",
  "name": "九号出行 (自用版)",
  "keys": [
    "ninebot.authorization",
    "ninebot.deviceId",
    "ninebot.userAgent",
    "ninebot.shareTaskUrl",
    "ninebot.lastCaptureAt",
    "ninebot.titlePrefix",
    "ninebot.autoOpenBox",
    "ninebot.enableShare",
    "ninebot.notify",
    "ninebot.notifyFail",
    "ninebot.logLevel"
  ],
  "settings": [
    {
      "id": "ninebot.titlePrefix",
      "name": "通知标题前缀",
      "val": "九号签到助手",
      "type": "text",
      "desc": "自定义通知消息的标题"
    },
    {
      "id": "ninebot.autoOpenBox",
      "name": "自动开启盲盒",
      "val": true,
      "type": "boolean",
      "desc": "开启后，当盲盒倒计时结束（剩余0天）时自动开启"
    },
    {
      "id": "ninebot.enableShare",
      "name": "执行分享任务",
      "val": true,
      "type": "boolean",
      "desc": "开启后，每日自动模拟执行分享任务赚取经验"
    },
    {
      "id": "ninebot.notify",
      "name": "开启静默运行",
      "val": false,
      "type": "boolean",
      "desc": "开启后，将不再发送每日签到成功的通知（仅在失败时通知）"
    },
    {
      "id": "ninebot.notifyFail",
      "name": "失败时强制通知",
      "val": true,
      "type": "boolean",
      "desc": "即使开启了静默运行，如果任务失败是否依然发送通知"
    },
    {
      "id": "ninebot.logLevel",
      "name": "日志等级",
      "val": "simple",
      "type": "radios",
      "items": [
        { "key": "silent", "label": "静默 (只记录错误)" },
        { "key": "simple", "label": "简洁 (关键节点)" },
        { "key": "full", "label": "完整 (包含数据包)" }
      ],
      "desc": "控制脚本在执行日志中输出的信息量"
    },
    {
      "id": "ninebot.authorization",
      "name": "认证 Token (自动抓取)",
      "val": "",
      "type": "textarea",
      "auto_grow": true,
      "rows": 3,
      "desc": "核心数据，请勿随意修改"
    },
    {
      "id": "ninebot.lastCaptureAt",
      "name": "最后抓包时间",
      "val": "",
      "type": "text",
      "disabled": true,
      "desc": "脚本 v2.7 写入的最后抓包时间，用于判断 Cookie 是否过期"
    }
  ],
  "author": "@GamerNoTitle",
  "repo": "https://github.com/GamerNoTitle/Task",
  "icons": [
    "https://raw.githubusercontent.com/Orz-3/mini/master/Color/ninebot.png",
    "https://raw.githubusercontent.com/Orz-3/mini/master/Color/ninebot.png"
  ]
}
