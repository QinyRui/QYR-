{
  "id": "Ninebot.Sign.Single",
  "name": "九号智能电动车 · 单号自动签到（BoxJS）",
  "version": "2.7.0",
  "author": "适配脚本专用",
  "description": "兼容 Ninebot_Sign_Single_v2.7.js，可视化管理签到/分享/盲盒等功能",
  "keys": [
    {
      "key": "ninebot.authorization",
      "type": "input",
      "title": "Authorization",
      "desc": "抓包自动写入，核心鉴权参数",
      "placeholder": "抓包后自动生成",
      "default": ""
    },
    {
      "key": "ninebot.deviceId",
      "type": "input",
      "title": "DeviceId",
      "desc": "设备唯一标识，抓包自动写入",
      "placeholder": "抓包后自动生成",
      "default": ""
    },
    {
      "key": "ninebot.userAgent",
      "type": "input",
      "title": "User-Agent",
      "desc": "默认适配九号H5端，无需修改",
      "default": "Ninebot/3620 CFNetwork/3860.200.71 Darwin/25.1.0"
    },
    {
      "key": "ninebot.shareTaskUrl",
      "type": "input",
      "title": "分享任务接口",
      "desc": "抓包分享动作后自动写入（含 /service/2/app_log/）",
      "default": "https://snssdk.ninebot.com/service/2/app_log/?aid=10000004"
    },
    {
      "key": "ninebot.logLevel",
      "type": "selector",
      "title": "日志等级",
      "options": [
        {"label": "调试", "value": "debug"},
        {"label": "信息", "value": "info"},
        {"label": "警告", "value": "warn"},
        {"label": "错误", "value": "error"}
      ],
      "default": "info"
    },
    {
      "key": "ninebot.notify",
      "type": "switch",
      "title": "启用通知推送",
      "default": true
    },
    {
      "key": "ninebot.notifyFail",
      "type": "switch",
      "title": "失败时通知",
      "default": true
    },
    {
      "key": "ninebot.autoOpenBox",
      "type": "switch",
      "title": "自动开7天盲盒",
      "default": false
    },
    {
      "key": "ninebot.titlePrefix",
      "type": "input",
      "title": "通知标题前缀",
      "default": "九号签到助手"
    },
    {
      "key": "ninebot.lastCaptureAt",
      "type": "text",
      "title": "最后抓包时间",
      "editable": false,
      "default": ""
    },
    {
      "key": "ninebot.lastShareDate",
      "type": "text",
      "title": "最后分享日期",
      "editable": false,
      "default": ""
    }
  ],
  "compatibility": {
    "mainScript": "Ninebot_Sign_Single_v2.7.js",
    "supportTools": ["Loon", "Surge", "Quantumult X"]
  }
}