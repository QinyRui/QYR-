{
  "id": "ninebot.auto.sign",
  "version": "2.6",
  "description": "抓包自动写入 + 自动签到 + 分享任务重放/领取 + 盲盒自动开",
  "author": "QinyRui",
  "homepage": "https://t.me/JiuHaoAPP",
  "icon": "https://raw.githubusercontent.com/QinyRui/QYR-/main/assets/ninebot.png",
  "items": [
    {
      "title": "Authorization",
      "key": "ninebot.authorization",
      "type": "text",
      "value": "",
      "desc": "抓包写入 Authorization"
    },
    {
      "title": "DeviceId",
      "key": "ninebot.deviceId",
      "type": "text",
      "value": "",
      "desc": "抓包写入 DeviceId"
    },
    {
      "title": "User-Agent",
      "key": "ninebot.userAgent",
      "type": "text",
      "value": "",
      "desc": "抓包写入 User-Agent"
    },
    {
      "title": "Share Task URL",
      "key": "ninebot.shareTaskUrl",
      "type": "text",
      "value": "",
      "desc": "抓包写入分享任务 URL"
    },
    {
      "title": "通知开关",
      "key": "ninebot.notify",
      "type": "switch",
      "value": true,
      "desc": "插件 UI 可开关通知"
    },
    {
      "title": "自动开盲盒",
      "key": "ninebot.autoOpenBox",
      "type": "switch",
      "value": true,
      "desc": "插件自动开启 7 天盲盒"
    },
    {
      "title": "自动修复分享任务",
      "key": "ninebot.autoRepair",
      "type": "switch",
      "value": true,
      "desc": "插件自动修复分享任务"
    },
    {
      "title": "自定义通知标题",
      "key": "ninebot.titlePrefix",
      "type": "text",
      "value": "九号签到助手",
      "desc": "插件通知标题"
    },
    {
      "title": "签到时间 CRON",
      "key": "ninebot.cron_time",
      "type": "text",
      "value": "1 0 * * *",
      "desc": "定时执行签到任务"
    },
    {
      "title": "盲盒进度条样式",
      "key": "ninebot.progressStyle",
      "type": "select",
      "value": "0",
      "options": ["0","1","2","3","4","5","6","7"],
      "desc": "插件 UI 可调盲盒进度条样式"
    },
    {
      "title": "日志等级",
      "key": "ninebot.logLevel",
      "type": "select",
      "value": "INFO",
      "options": ["OFF","ERROR","WARN","INFO","DEBUG","ALL"],
      "desc": "插件 UI 可调日志等级"
    }
  ]
}