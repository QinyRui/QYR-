{
  "id": "ninebot.message.monitor",
  "name": "九号消息监控",
  "author": "QinyRui & ❥﹒﹏非我不可",
  "version": "1.1",
  "icon": "https://raw.githubusercontent.com/QinyRui/QYR-/main/icon/ninebot_128.png",
  "apps": [
    {
      "id": "Ninebot_Message_Monitor",
      "name": "九号消息监控",
      "keys": [
        "ninebot.authorization",
        "ninebot.deviceId",
        "ninebot.userAgent",
        "ninebot.msg_notify",
        "ninebot.msg_notify_alert",
        "ninebot.msg_notify_reward",
        "ninebot.msg_debug",
        "ninebot.msg_poll_interval",
        "ninebot.msg_last_id",
        "ninebot.msg_auto_capture"
      ],
      "settings": [
        {"id":"ninebot.authorization","name":"Authorization","type":"text","val":""},
        {"id":"ninebot.deviceId","name":"DeviceId","type":"text","val":""},
        {"id":"ninebot.userAgent","name":"User-Agent（自动写入）","type":"text","val":""},
        {"id":"ninebot.msg_notify","name":"总开关","type":"boolean","val":true},
        {"id":"ninebot.msg_notify_alert","name":"车辆异常通知","type":"boolean","val":true},
        {"id":"ninebot.msg_notify_reward","name":"奖励到账通知","type":"boolean","val":true},
        {"id":"ninebot.msg_debug","name":"调试日志","type":"boolean","val":false},
        {"id":"ninebot.msg_poll_interval","name":"轮询间隔（秒）","type":"number","val":60},
        {"id":"ninebot.msg_auto_capture","name":"抓包开关","type":"boolean","val":true,"desc":"开启后自动抓包写入 Authorization/DeviceId/User-Agent"}
      ]
    }
  ]
}